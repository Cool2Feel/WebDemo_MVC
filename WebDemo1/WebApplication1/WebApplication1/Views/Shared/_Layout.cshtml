   @RenderBody()

    <div class="theme-popover theme-empty">
        <h3>消息通知提示</h3>
        <input type="hidden" id="message" />
        <input type="hidden" id="sendmessage" value="Send" />
        <div class="customerForm">
            <ul id="discussion"></ul>
        </div>
        <div class="meet_btn">
            <input type="button" class="submit" value="确定" /><input type="button" class="quxiao" value="取消" />
            <p>注：确认后，表示已确认处理，不再保存显示.</p>
        </div>
    </div>
    <div class="theme-popover-mask"></div>	
    <div class="footer">
        <hr />
        <footer>
            <div>
                <p>&copy; @DateTime.Now.Year - KTC会议室管理程序</p>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>


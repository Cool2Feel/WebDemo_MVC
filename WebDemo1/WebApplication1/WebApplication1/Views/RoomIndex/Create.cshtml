@model WebApplication1.Models.RoomModels

@{
    ViewBag.Title = "添加";
}

<div class="meet_content" style="height:600px;">
    <h3>添加会议室房间</h3>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("会议室:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "会议室名称", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("参会人数:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Number, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Number, "(？人-？人)", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("开始时间:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("结束时间:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.EndTime, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EndTime, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("备   注:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Tips, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Tips, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("会议室类型:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*Html.DropDownListFor(model => model.Page, ViewData["page"] as IEnumerable<SelectListItem>, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.EditorFor(model => model.Page, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Page, "内部、坂田、惠南", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("会议室位置:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Postion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Postion, "0,1,2,3...(上、中、下)", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div style="font-size:15px;padding-left: 100px;">
        @Html.ActionLink("返 回", "Index")
    </div>
    <br />
</div>
